<div class="mx-auto md:w-2/3 w-full p-6 bg-white rounded-lg shadow-lg">
  <!-- Back to articles link -->
  <%= link_to "Back to articles", admin_articles_path, class: "mb-6 text-blue-500 hover:text-blue-700 font-medium inline-block" %>

  <h1 class="text-3xl font-semibold text-gray-800 mb-4">Editing Article</h1>

  <!-- Display alert message if there is a flash alert (profanity error) -->
  <% if flash[:alert] %>
    <div class="bg-red-100 text-red-700 border-l-4 border-red-500 p-4 mb-4 rounded-md">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Render the form for article editing -->
  <%= render "form", article: @article %>

  <!-- Link to show this article -->
  <% if @article.id %>
    <%= link_to "Show this article", admin_article_path(@article), class: "mt-4 inline-block px-6 py-3 rounded-lg text-white bg-blue-500 hover:bg-blue-600 font-medium transition duration-300" %>
  <% end %>

  <!-- Button to delete the article -->
  <% if @article.id %>
    <%= button_to "Destroy this article", admin_article_path(@article), method: :delete, class: "mt-4 inline-block px-6 py-3 rounded-lg text-white bg-red-500 hover:bg-red-600 font-medium transition duration-300" %>
  <% end %>
</div>
