<div class="mx-auto md:w-2/3 w-full">
  <!-- Back to articles link -->
  <%= link_to "Back to articles", admin_articles_path, class: "mb-4 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

  <h1 class="font-bold text-4xl">New article</h1>

  <!-- Display alert message if there is a flash alert (profanity error) -->
  <% if flash[:alert] %>
    <div class="bg-red-100 text-red-700 border-l-4 border-red-500 p-4 mb-4 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Render the form for article creation -->
  <%= form_with(model: @article, url: admin_articles_path, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm", value: @article.title %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm", value: @article.description %>
    </div>

    <div class="mb-4">
      <%= form.label :cover, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :cover, class: "mt-1 block w-full" %>
    </div>

    <div class="mb-4">
      <%= form.submit "Create Article", class: "py-3 px-5 bg-blue-500 text-white rounded-lg" %>
    </div>
  <% end %>

  <!-- Only show this link if the article has been created and has an ID -->
  <% if @article.id %>
    <%= link_to "Show this article", admin_article_path(@article), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>

  <!-- Button to delete the article (if already created) -->
  <% if @article.id %>
    <%= button_to "Destroy this article", admin_article_path(@article), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  <% end %>
</div>
